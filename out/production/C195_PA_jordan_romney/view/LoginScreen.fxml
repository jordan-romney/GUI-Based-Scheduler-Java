<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="850.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginScreenController">
   <children>
      <BorderPane layoutX="7.0" layoutY="6.0" prefHeight="850.0" prefWidth="1400.0">
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="250.0">
                     <children>
                        <ImageView fx:id="logInImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../assets/global_logo.png" />
                           </image>
                        </ImageView>
                        <Label text="Global Consulting Inc." textFill="#09317c">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="250.0">
                     <children>
                        <Label fx:id="welcomeLabel" maxHeight="-Infinity" maxWidth="-Infinity" text="Welcome Back!" textFill="#09317c">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="25.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Label fx:id="locationLabel" alignment="CENTER" text="Your location is:" />
                              <Label fx:id="physicalLocationLabel" alignment="CENTER" text="Label" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <Label fx:id="pleaseEnterLabel" text="Please enter your Username and Password">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="usernameLabel" text="Username:" />
                        <TextField fx:id="username" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="200.0" />
                        <Label fx:id="passwordLabel" text="Password:" />
                        <PasswordField fx:id="password" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onPasswordEnter" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <Button fx:id="logInButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onLogInButton" text="Log in" textFill="#09317c">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
